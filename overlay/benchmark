. /usr/share/mocis/sys/config/setup-vars
ensky_bench=0
mocis_bench=0
goback=0
INPUT=save.$$
trap "rm $INPUT; exit" SIGHUP SIGINT SIGTERM
dialog --clear --backtitle "[ M.O.C.I.S ]" \
--no-lines \
--title "[ Choose Benchmark ]" \
--menu "You can use the UP/DOWN arrow keys, the first \n\
letter of the choice as a hot key, or the \n\
number keys 1-9 to choose an option.\n\
Choose the TASK" 0 0 8 \
Ensky "Edited by Storageplan" \
Mocis "Own intepretaion of Ensky" \
Back "Go back to the Menu" \
Exit "Exit to the shell" 2>"${INPUT}"
menuitem=$(<"${INPUT}")
[ -f $INPUT ] && rm $INPUT
case $menuitem in
        Ensky) ensky_bench=1;;
        Mocis) mocis_bench=1;;
        Back) goback=1;;
        Exit) echo "Bye"; break;;
esac
if [ $ensky_bench = 1 ]; then
  bash $Path/repo/uni/ensky_bench
fi
if [ $mocis_bench = 1 ]; then
  bash $Path/repo/uni/mocis_bench
fi

if [ $goback = 1 ]; then
  bash $Home
fi
